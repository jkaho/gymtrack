<div class="container form-card">
    <div class="row">
        <div class="col-12 submit-form-div">
            <div class="card shadow signin-card">
            <h2 class="sign-log-in">Sign Up Form</h2>
            <form class="signup">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" class="form-control" id="firstname-input" placeholder="Enter first name" maxlength="30" required>
                    <div class="input-note">*Max. 30 characters</div>
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" class="form-control" id="lastname-input" placeholder="Enter last name" maxlength="50" required>
                    <div class="input-note">*Max. 50 characters</div>
                </div>
                    <div class="form-group">
                    <label for="dob">Date of Birth</label>
                    <input type="date" class="form-control" min="1900-01-01" max="2003-12-31" id="dob-input" required>
                    <div class="input-note">*Must be 18 or over</div>
                </div>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email-input" placeholder="Enter email address" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <!-- Password criteria: 
                        1. Min 8 characters
                        2. Min one uppercase char
                        3. Min one lowercase char
                        4. Min one number 
                    -->
                    <input type="password" class="form-control" id="password-input" placeholder="Enter password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$" required>
                    <div class="input-note">*Min. length 8 characters, must contain at least one lowercase character, one uppercase and one number.</div>
                </div>
                <button type="submit" class="form-btn btn btn-default signbtn">Sign Up</button>
            </form>
            <br />
            <p id="orlogin">Or log in <a href="/login">here</a></p>
        </div>
     </div>
    </div>
</div>

<!-- Error message modal --> 
<div id="error-modal-bg" class="modal-bg">
    <div class="add-review-modal">
        <div class="error-modal-div">
            <div class="error-heading">
                <i class="fas fa-times-circle fa-3x"></i>                
                <h4>Oops!</h4>
                <p>
                    An error occurred whilst handling your request.<br>
                    Please refresh the page or try again later.
                </p>
            </div>
            <div class="nav-btn-div">
                <button id="error-ok-btn" class="confirm-btn" type="submit">Okay</button>
            </div>
        </div>
    </div>
</div>

<!-- Login error message modal --> 
<div id="login-error-modal-bg" class="modal-bg">
    <div class="add-review-modal">
        <div class="login-error-modal-div">
            <div class="login-error-heading">
                <i class="far fa-frown-open fa-3x"></i>               
                <h4>Incorrect login details</h4>
                <p>
                    You entered an incorrect email or password.
                </p>
            </div>
            <div class="nav-btn-div">
                <button id="login-error-ok-btn" class="confirm-btn" type="submit">Okay</button>
            </div>
        </div>
    </div>
</div>